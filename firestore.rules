rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Rooms collection
    match /rooms/{roomId} {
      // Anyone can read rooms (needed to check if room exists when joining)
      allow read: if true;
      
      // Only authenticated users can create rooms
      allow create: if request.auth != null;
      
      // Only authenticated users can update rooms
      // (admin check is done in the app logic)
      allow update: if request.auth != null;
      
      // Only authenticated users can delete rooms
      allow delete: if request.auth != null;
    }
    
    // Room users subcollection
    match /roomUsers/{roomId}/users/{userId} {
      // Anyone can read users in a room (needed to display participants)
      allow read: if true;
      
      // Authenticated users can create/update user documents
      // This allows joining rooms and updating votes
      allow create, update: if request.auth != null;
      
      // Users can delete their own document (leave room)
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
